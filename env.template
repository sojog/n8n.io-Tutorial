# ========================================
# n8n Docker Configuration Template
# ========================================

# Copy this file to .env and update values
# cp env.template .env

# ========================================
# n8n Authentication
# ========================================
N8N_USER=admin
N8N_PASSWORD=change-this-secure-password

# ========================================
# Host Configuration
# ========================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# For production with domain:
# N8N_HOST=n8n.yourdomain.com
# N8N_PROTOCOL=https
# WEBHOOK_URL=https://n8n.yourdomain.com/

# ========================================
# Timezone
# ========================================
TIMEZONE=Europe/Bucharest

# ========================================
# PostgreSQL Database (if using)
# ========================================
POSTGRES_USER=n8n
POSTGRES_PASSWORD=change-this-postgres-password
POSTGRES_DB=n8n

# ========================================
# Encryption Key
# ========================================
# Generate with: openssl rand -base64 32
# IMPORTANT: Do not change after initial setup!
# Changing this will invalidate all saved credentials
N8N_ENCRYPTION_KEY=

# ========================================
# Logging
# ========================================
N8N_LOG_LEVEL=info
# Options: error, warn, info, verbose, debug

# ========================================
# Executions
# ========================================
# Timeout for workflow executions (seconds)
EXECUTIONS_TIMEOUT=300
EXECUTIONS_TIMEOUT_MAX=600

# Save execution data
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all

# Prune old executions automatically
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=336  # hours (14 days)

# ========================================
# Optional: External APIs
# ========================================
# OpenAI (if using AI features)
# OPENAI_API_KEY=sk-...

# Other API keys
# GOOGLE_API_KEY=
# ANTHROPIC_API_KEY=


